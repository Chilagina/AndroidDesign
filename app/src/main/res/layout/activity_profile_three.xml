<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".ProfileThree">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/gradientdarkgray"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/purplesky" />
        <TextView
            android:id="@+id/usernameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageview_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Jane Doe"
            android:scrollbarThumbHorizontal="@color/gray"
            android:scrollbarThumbVertical="@color/gray"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:scrollbarThumbHorizontal="@color/gray"
        android:scrollbarThumbVertical="@color/gray">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_exercise"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/running" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_below="@+id/imageview_exercise"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            android:text="Exercise"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            app:fontFamily="sans-serif-condensed-medium" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_nutrition"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_toRightOf="@id/imageview_exercise"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/nutrition" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:textAlignment="center"
            android:layout_below="@+id/imageview_nutrition"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/textView3"
            android:background="@android:color/transparent"
            android:text="Calorie Intake"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            app:fontFamily="sans-serif-condensed-medium" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_sleep"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_toRightOf="@id/imageview_nutrition"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/sleeping" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:textAlignment="center"
            android:layout_below="@+id/imageview_sleep"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/textView4"
            android:background="@android:color/transparent"
            android:text="Sleep"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            app:fontFamily="sans-serif-condensed-medium" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_goals"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_below="@+id/imageview_exercise"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/goals" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:textAlignment="center"
            android:layout_below="@+id/imageview_goals"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            android:text="Goals"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            app:fontFamily="sans-serif-condensed-medium" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_stats"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_below="@+id/imageview_nutrition"
            android:layout_toRightOf="@id/imageview_goals"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/stats" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:textAlignment="center"
            android:layout_below="@+id/imageview_stats"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/textView6"
            android:background="@android:color/transparent"
            android:text="Stats"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            app:fontFamily="sans-serif-condensed-medium" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_followers"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_below="@+id/imageview_sleep"
            android:layout_toRightOf="@id/imageview_stats"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/followers" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:textAlignment="center"
            android:layout_below="@+id/imageview_followers"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/textView7"
            android:background="@android:color/transparent"
            android:text="Followers"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            app:fontFamily="sans-serif-condensed-medium" />


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView6"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_navigation_gray"
            app:itemBackground="@drawable/rounded_navigation_gray"
            app:itemIconTint="@color/colorAccent"
            app:itemTextColor="@color/colorAccent"
            app:menu="@menu/navigation_menu" />

    </RelativeLayout>
</LinearLayout>
