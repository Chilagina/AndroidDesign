<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginOptions"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/gradientbackgroundtwo"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/loginlogo" />


        <TextView
            android:id="@+id/materialDesignText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text=" Login Page Designs"
            android:textColor="@color/whiteish"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/materialDesignText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Login Resource Files"
            android:textColor="@color/whiteish"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:scrollbarThumbHorizontal="@color/whiteish"
        android:scrollbarThumbVertical="@color/whiteish">

        <Button
            android:id="@+id/templateOneButton"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:background="@drawable/gradientbackgroundtwo"
            android:onClick="buttonFirstLoginOnClick"
            android:text="Classic Login Template"
            android:textColor="@color/whiteish" />

        <Button
            android:id="@+id/templateTwoButton"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/templateOneButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradientbackgroundtwo"
            android:onClick="buttonSecondLoginOnClick"
            android:text="Retro Login Template"
            android:textColor="@color/whiteish" />

        <Button
            android:id="@+id/templateThreeButton"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/templateTwoButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradientbackgroundtwo"
            android:onClick="buttonThirdLoginOnClick"
            android:text="Modern Login Template"
            android:textColor="@color/whiteish" />
    </RelativeLayout>





</LinearLayout>